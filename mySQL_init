*** Create USERVIEW TABLE ***
CREATE TABLE IF NOT EXISTS USERVIEWS(
	VIEWID INT AUTO_INCREMENT,
    ID INT,
	VIEW VARCHAR(100),
	VIEWBUSSTOPSERVICE VARCHAR (100),
	PRIMARY KEY (VIEWID)
);


*** Create USER TABLE to store login credentials ***
CREATE TABLE IF NOT EXISTS USER(
    ID INT AUTO_INCREMENT,
	USERNAME VARCHAR(100),
	HASH VARCHAR (100),
	PRIMARY KEY (ID)
);


*** Create UNIQUEVIEW TABLE to store views ***
CREATE TABLE IF NOT EXISTS UNIQUEVIEW(
	VIEW VARCHAR(100),
	ID INT,
	IDVIEW VARCHAR(100),
	UNIQUE KEY UNIQUE_IDVIEW (IDVIEW)
);